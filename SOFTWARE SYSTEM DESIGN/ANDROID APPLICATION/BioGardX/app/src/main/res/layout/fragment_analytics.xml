                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/iv_water_reser"
                                    android:layout_width="0dp"
                                    android:layout_height="54dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="4dp"
