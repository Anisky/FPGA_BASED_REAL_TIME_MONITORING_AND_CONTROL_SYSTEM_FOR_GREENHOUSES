                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/card_rain_drops_desc"
                                        android:textColor="@android:color/tertiary_text_light"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <ImageView
